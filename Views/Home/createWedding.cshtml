@model Wedding
<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <title>Hello, world!</title>
  </head>
  <body>
    <div class="container">
        <h1>Welcome to the Wedding Planner</h1>
        <a style="float: right;" class="ml-5" href="dashboard">Dashboard</a>
        <a style="float: right;" href="/">Log Out</a>
        <div class="registeration">
          <h3>Plan Your Wedding</h3>
            <form asp-action="" asp-controller="createWedding" method="POST">
                <span asp-validation-for="groomid"></span>
                <label asp-for="brideid">Bride:</label> 
                <select class="form-control" asp-for="brideid">
                @foreach(var i in @ViewBag.user)
                {
                  <option value="@i.userid">@i.firstName @i.lastName</option>
                }
                </select>
                

                <label asp-for="groomid">Groom:</label>
                <span asp-validation-for="groomid"></span>
                <select class="form-control" asp-for="groomid">
                @foreach(var i in @ViewBag.user)
                {
                  <option value="@i.userid">@i.firstName @i.lastName</option>
                }
                </select>
                                                    
                <label asp-for="date">Date:</label>
                <span asp-validation-for="date"></span>
                <input class="form-control" type="date" asp-for="date">

                <label asp-for="address">Wedding Address:</label>
                <span asp-validation-for="address"></span>
                <input class="form-control" type="text" asp-for="address">

                <button class="btn btn-primary mt-3" type="submit" name="registersubmit">Create Wedding!</button>
            </form>
        </div>

    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>